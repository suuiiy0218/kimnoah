//1. Declaration
const arr1 = new Array();
const arr2 = [1, 2];

//2. index position
const fruits = ['ğŸŠ', 'ğŸ'];
console.log(fruits);
console.log(fruits.length);
console.log(fruits[0]);
console.log(fruits[1]);
console.log(fruits[2]);
console.log(fruits[fruits.length - 1]);

console.clear();
//3. Looping over an array
//print all fruits
//a. for
for (let i = 0; i < fruits.length; i++)  {
    console.log(fruit);
}

//b. for of
for (let fruit of fruits)  {
    console.log(fruit);
}

//c. forEach
fruits.forEach((fruit)=>console.log(fruit));

//4. Addtion, deletion, copy
//add an item th the end
fruits.push(['ğŸŠ', 'ğŸ');
console.log(fruits);

//pop: remove an item from the end
fruits.pop();
fruits.pop();
console.log(fruits);

//unshift: add an item to the benigging
fruits.shift();
fruits.shift();
console.log(fruits);

//note!! shift, unshift are slower than popm push
//splice: remove an item by index position
fruits.push('ğŸŠ', 'ğŸ','ğŸ‰');
console.log(fruits);
fruits.splice(1, 1);
console.log(fruits);
fruits.splice(1, 1, 'ğŸŒ', 'ğŸ');
console.log(fruits);

//combine two arrays
const fruits2 = ['ğŸ‹', 'ğŸ«'];
const newfruits = fruit.concat(fruits2);
console.log(newfruits);

//5. Searching
//find the index
console.clear();
console.log(fruits);
console.log(fruits.indexOf('ğŸ'));
console.log(fruits.indexOf('ğŸŠ'));
console.log(fruits.indexOf('ğŸ‰'));

//includes
console.log(fruits.includes('ğŸŒ')
console.log(fruits.includes('ğŸ«')

//lastindex0f
console.clear();
fruits.push('ğŸŠ');
console.log(fruits);
console.log(fruits.indexOf('ğŸŠ'));
console.log(fruits.lastIndexOf('ğŸŠ'));
